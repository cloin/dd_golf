groups:
- name: Golf ball counter
  rules:
  - alert: Golf ball alert
    expr: total_balls_hit > 10
    for: 10s
    labels:
      severity: page
    annotations:
      summary: "total_balls_hit exceeds 10 - dispatch RangeRoamer"

- name: SwingSight SSL cert
  rules:
  - alert: SSL expiry
    expr: probe_ssl_earliest_cert_expiry - time() < 86100
    for: 1s
    labels:
      severity: page
    annotations:
      summary: "SwingSight SSL cert expiry < 24 hrs"